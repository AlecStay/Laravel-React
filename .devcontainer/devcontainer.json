{
    "name": "Laravel-React Codespace",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "app", // Conecta VS Code al servicio 'app' (Laravel)
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/laravel", // Abre VS Code en la carpeta Laravel por defecto
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker",
                "ms-vscode.vscode-typescript-tslint-plugin",
                "PHP.php-debug",
                "Vue.volar",
                "bradlc.vscode-tailwindcss",
                "formulahendry.auto-rename-tag",
                "ritwickdey.liveserver"
            ]
        }
    },
    // Ejecuta este script despu√©s de que el contenedor se haya creado y el volumen montado
    "postCreateCommand": "bash .devcontainer/post-create.sh",
    "forwardPorts": [8000, 3000, 5050] // Puertos que quieres exponer
}